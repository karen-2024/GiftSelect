
<div class="img1">
  <div class="img1-title">
    <h1>Profile Edit</h1>
  </div>
</div>

<div class='container'>
  <div class="row">
    <div class="mx-auto col-10">

      <br>
      <%= form_with model: @user do |f| %>
        <table class="edit", width="100%">
          <tr>
            <td width="20%"></td>
            <td width="80%"></td>
          </tr>
          <tr>
            <td><label for="inputImage">ProfileImage</label></td>
            <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
          </tr>
          <tr>
            <td><label for="inputName">Name</label></td>
            <td><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></td>
          </tr>
          <tr>
            <td><%= f.submit "変更を保存" %></td>
          </tr>
        </table>
      <% end %>

      <h5 class="Withdrawal">
        <strong><%= link_to "退会", user_path(current_user.id), class: "destroy-user", method: :delete, "data-confirm" => "本当に退会しますか？" %></strong>
      </h5>

    </div>
  </div>
</div>