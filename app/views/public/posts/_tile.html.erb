
<% posts.each do |post| %>
  <div class="card">
    <div class="card-body rounded">
      <!--商品画像-->
      <%= link_to post_path(post.id) do %>
         <%= image_tag post.get_image(300,300) %>
      <% end %>

      <br>
      <table>
        <tr>
          <th><h5><strong>商品名：<%= post.name %></strong></h5></th>
        </tr>
        <tr>
          <td>場所：<%= post.prefecture %></td>
        </tr>
        <tr>
          <td>「<%= post.recommend %>」オススメ</td>
        </tr>
        <tr>
          <td><%= link_to "★いいね： #{post.favorites.count}", post_path(post.id) %></td>
        </tr>
        <tr>
          <td><strong>User_name：　<%= post.user.name %></strong></td>
        </th>
        <tr>
          <td>投稿日：<%= post.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      </table>
    </div>
  </div>
<% end %>