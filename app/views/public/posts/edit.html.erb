
<div class="img1">
  <div class="img1-title">
    <h1>POST EDIT</h1>
  </div>
</div>

<div class='container'>
  <div class="row">
    <div class="mx-auto">

      <% if @post.errors.any? %>
        <%= @post.errors.count %>件、入力欄が空欄です。
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <br>
      <%= form_with model: @post do |f| %>
        <table class="edit", width="100%">
          <tr>
            <td width="30%"></td>
            <td width="70%"></td>
          </tr>
          <tr>
            <td><label for="inputImage">商品画像</label></td>
            <td><%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %></td>
          </tr>
          <tr>
            <td><label for="inputName">商品名</label></td>
            <td><%= f.text_field :name, size: 45, autofocus: true, id:"inputName", placeholder:"商品名"%></td>
          </tr>
          <tr>
            <td><label for="inputIntroduction">商品説明</label></td>
            <td><%= f.text_area :introduction, cols: '50', autofocus: true, id:"inputIntroduction", placeholder:"商品説明"%></td>
          </tr>
          <tr>
            <td><label for="inputAmount">個数</label></td>
            <td><%= f.number_field :amount, autofocus: true, id:"inputAmount", placeholder:"例：20"%>個</td>
          </tr>

          <tr>
            <!--個包装  有無 選択-->
          </tr>

          <tr>
            <td><label for="inputPrice">価格</label></td>
            <td><%= f.number_field :price, autofocus: true, id:"inputPrice", placeholder:"例：1500"%>円</td>
          </tr>
          <tr>
            <td><label for="inputPrefecture">都道府県</label></td>
            <td><%= f.select :prefecture, Post.prefectures.keys.map, autofocus: true, id:"inputPrefecture", placeholder:"都道府県"%></td>
          </tr>
          <tr>
            <td><label for="inputLocation">場所（詳細）</label></td>
            <td><%= f.text_field :location, size: 45, autofocus: true, id:"inputIocation", placeholder:"例：○○○市、～～店"%></td>
          </tr>
          <tr>
            <td><label for="inputRecommend">贈る相手・オススメ</label></td>
            <td><%= f.select :recommend, Post.recommends.keys.map, autofocus: true, id:"inputRecommend", placeholder:"都道府県"%></td>
          </tr>

          <tr>
            <td><label for="inputTagname">タグ(「,」で区切ると<br>複数タグ登録できます)</label></td>
            <td><%= f.text_field :tagname, size: 45, autofocus: true, id:"inputTagname", placeholder:"例：和菓子,お餅" %></td>
          </tr>

          <tr>
            <td><label for="inputReview">Review</label></td>
            <td><%= f.text_area :review, cols: '50', autofocus: true, id:"inputReview" %></td>
          </tr>

          <tr>
            <td><%= f.submit "変更を保存" %></td>
          </tr>
        </table>
      <% end %>

    </div>
  </div>
</div>