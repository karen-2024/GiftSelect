<div class="img2">
  <div class="img1-title">
    <h1>Comment index</h1>
  </div>
</div>

<div class='container'>
  <div class="row">

    <table class='table'>
      <thead>
        <tr>
          <th class="col-2">User_name</th>
          <th class="col-6">Comment</th>
          <th class="col-1"></th>
          <th class="col-2"></th>
        </tr>
      </thead>

      <tbody>
        <% @post_comments.each do |post_comment| %>
          <tr>
            <td class="col-2"><%= @users.find(post_comment.user_id).name %></td>
            <td class="col-6"><%= post_comment.comment %></td>
            <td class="col-1"><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
            <td class="col-2"><%= link_to '削除', admin_post_comment_path(post_comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>