<div class="img1">
  <div class="img1-title">
    <h1>全ユーザー 一覧</h1>
  </div>
</div>

<table class='table'>
  <thead>
    <tr>
      <th>Profile_image</th>
      <th>User_name</th>
      <th>Email</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50), style: "border-radius: 50%; object-fit:cover;" %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>